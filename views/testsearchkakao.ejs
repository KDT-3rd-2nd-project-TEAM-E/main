<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- jquery CDN (for AJAX) -->
    <script
      src="https://code.jquery.com/jquery-3.6.1.min.js"
      integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
      crossorigin="anonymous"
    ></script>

    <title>Document</title>
  </head>
  <body>
    <form method="get" name="search">
      <input type="text" id="searchInput" />
      <button type="button" onclick="Search()">검색</button>
    </form>
    <p></p>
    <script>
      function Search() {
        let result = document.forms["search"].searchInput.value;
        console.log(result);

        $.ajax({
          method: "GET",
          url: "https://dapi.kakao.com/v2/search/blog?target=title",
          data: { query: result },
          // data: { query: `${result}` },
          // data: { query: '건강' },
          headers: {
            Authorization: "KakaoAK a781e81dc26fc9d9edf0b4cb02c30760",
          },
        }).done(function (msg) {
          console.log(msg);
          for (i = 0; i < msg.documents.length; i++) {
            $("p").append("<strong>" + msg.documents[i].blogname + "</strong>");
            $("p").append(
              "<div>" +
                msg.documents[i].contents.substr(0, 20) +
                "..." +
                "</div>"
            );
            $("p").append("<div>" + msg.documents[i].datetime + "</div>");
            $("p").append("<div>" + msg.documents[i].title + "</div>");
            $("p").append("<div>" + msg.documents[i].url + "</div>");
            $("p").append("<img src='" + msg.documents[i].thumbnail + "'/>");
          }
        });
      }
    </script>
  </body>
</html>
